<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Create New Widget</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Widget</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      <%= form_for :widget, url: widget_path, method: :post do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: 'widget name' %>
          <%= f.hidden_field :kind, value: 'visible' %>
       </div>
       <div class="form-group">
        <%= f.label :description%>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Enter a description for the widget'%>
       </div>
       <div class="form-group">
        <%= f.submit 'Create Widget', class: 'btn btn-primary' %>
       </div>
      <% end %>

    </div>
  </div>
</div>